<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ShoppingApp.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LogInActivity"
            android:label="@string/LogInActivity"
            android:parentActivityName=".SplashScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/RegisterActivity"
            android:parentActivityName=".LogInActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>
        </activity>
        <activity
            android:name=".MainPageActivity"
            android:label="@string/MainPageActivity"
            android:parentActivityName=".LogInActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ShoppingApp.app.LogInActivity"/>
        </activity>
    </application>

</manifest>
